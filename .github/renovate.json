{
  "extends": ["config:base", ":labels(Dependency)", "group:all"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["lint", "prettier"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "pip_requirements": {
    "fileMatch": ["importer/requirements.txt"]
  }
}
